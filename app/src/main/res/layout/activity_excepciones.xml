                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard de Autos"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#d11b0b">

                    </TextView>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <!--                       AUTOS POR REVISION                   -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:id="@+id/tvAutoPorRevisar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="351"
                                android:textSize="24dp"
                                android:textColor="#64A2E3"
                                android:textStyle="bold|italic"></TextView>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#c3cfdc"
                                android:textStyle="bold"
                                android:text="Por Revisar">
                            </TextView>

                        </LinearLayout>

                        <!--                        DIVIDER-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="|"
                                    android:textColor="#8fa9c4"
                                    android:textSize="40dp"
                                    android:layout_marginLeft="12dp">
                                </TextView>

                            </LinearLayout>

                        </LinearLayout>
                        <!--                            AUTOS POR VENCER PERIODO DE REVISION-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAutoPorVencer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="51"
                                android:textSize="24dp"
                                android:textColor="#F3CC59"
                                android:textStyle="bold|italic"></TextView>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#c3cfdc"
                                android:textStyle="bold"
                                android:text="Por Vencer">
                            </TextView>

                        </LinearLayout>

                        <!--                        DIVIDER-->
                        <LinearLayout

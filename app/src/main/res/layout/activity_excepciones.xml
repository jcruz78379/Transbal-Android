                                    android:layout_height="match_parent"
                                    android:text="|"
                                    android:textColor="#8fa9c4"
                                    android:textSize="40dp"
                                    android:layout_marginLeft="12dp">
                                </TextView>

                            </LinearLayout>

                        </LinearLayout>


